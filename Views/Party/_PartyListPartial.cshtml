@model ALLINONEPROJECTWITHOUTJS.Controllers.PartyMasterViewModel

<div class="table-responsive">
    @* <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-people-fill"></i> Party List</h5>
    </div> *@
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0 align-middle">
            <thead class="table-primary">
                <tr>
                    <th>Party Name</th>
                    <th style="width:40%" class="text-center" >Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.partyMasters != null && Model.partyMasters.Count > 0)
                {
                    @for (int i = 0; i < Model.partyMasters.Count; i++)
                    {
                        <tr>
                            <input type="hidden" name="PartyMaster.Id" value="@Model.partyMasters[i].Id" />
                            <td>
                                <span class="fw-semibold">@Model.partyMasters[i].Name</span>
                            </td>
                            <td class="text-center">
                                <form method="post" action="/Party/EditParty" class="d-inline">
                                    <input type="hidden" name="PartyMaster.Id" value="@Model.partyMasters[i].Id" />
                                    <button type="submit" class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </button>
                                </form>
                                <form method="post" action="/Party/DeleteParty" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this party?');">
                                    <input type="hidden" name="Id" value="@Model.partyMasters[i].Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash3"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center text-muted py-3">
                            <i class="bi bi-info-circle"></i> No parties available.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
