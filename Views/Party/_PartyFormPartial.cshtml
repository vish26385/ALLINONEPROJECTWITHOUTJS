@model ALLINONEPROJECTWITHOUTJS.Controllers.PartyMasterViewModel

<div class="p-3">
    <input type="hidden" name="PartyMaster.Id" value="@Model.PartyMaster?.Id" />

    <div class="mb-3">
        <label class="form-label fw-semibold">
            <i class="bi bi-person-vcard"></i> Party Name
        </label>
        <input type="text"
               class="form-control shadow-sm rounded-3"
               placeholder="Enter Party Name"
               name="PartyMaster.Name"
               value="@Model.PartyMaster?.Name"
               required />
    </div>

    <div class="text-end mt-3">
        @if (Model.PartyMaster != null && Model.PartyMaster.Id > 0)
        {
            <button type="submit"
                    formaction="/Party/UpdateParty"
                    class="btn btn-warning px-4 me-2">
                <i class="bi bi-pencil-square"></i> Update
            </button>
        }
        else
        {
            <button type="submit"
                    formaction="/Party/SaveParty"
                    class="btn btn-success px-4 me-2">
                <i class="bi bi-check-circle"></i> Save
            </button>
        }

        <button type="reset" class="btn btn-secondary px-4">
            <i class="bi bi-arrow-clockwise"></i> Reset
        </button>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
