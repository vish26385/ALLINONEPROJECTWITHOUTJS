@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 rounded-4" style="width: 400px;">
        <div class="card-header bg-primary text-white text-center fw-bold rounded-top-4">
            <i class="bi bi-person-circle"></i> Login
        </div>
        <div class="card-body p-4">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger text-center shadow-sm">
                    <i class="bi bi-exclamation-triangle"></i> @ViewBag.Message
                </div>
            }

            <form method="post" action="/Account/Login">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control shadow-sm" id="username"
                           name="userName" placeholder="Enter Username" required />
                    <label for="username"><i class="bi bi-person"></i> Username</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" class="form-control shadow-sm" id="password"
                           name="userPassword" placeholder="Enter Password" required />
                    <label for="password"><i class="bi bi-lock"></i> Password</label>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <a href="/Account/ForgotPassword" class="text-decoration-none small fw-semibold">
                        <i class="bi bi-question-circle"></i> Forgot Password?
                    </a>
                </div>

                <button type="submit" class="btn btn-primary w-100 shadow-sm fw-bold">
                    <i class="bi bi-box-arrow-in-right"></i> Login
                </button>
            </form>
        </div>
        <div class="card-footer text-center bg-light rounded-bottom-4">
            <span class="small">Not a member? </span>
            <a href="/Account/Register" class="fw-semibold text-primary text-decoration-none">Sign up now</a>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
