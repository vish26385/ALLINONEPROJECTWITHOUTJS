@model ALLINONEPROJECTWITHOUTJS.Controllers.ItemMasterViewModel

<div class="container">
    <div class="row">
        <div class="col-md-6 mb-4">
            <!-- Form Card -->
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white fw-bold rounded-top-4">
                    <i class="bi bi-box-seam"></i> Add / Edit Item
                </div>
                <div class="card-body">
                    <form method="post">
                        @Html.Partial("_ItemFormPartial")
                        @* <div class="text-end mt-3">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-circle"></i> Save
                            </button>
                            <button type="reset" class="btn btn-secondary px-4">
                                <i class="bi bi-arrow-clockwise"></i> Reset
                            </button>
                        </div> *@
                    </form>
                </div>
            </div>
            <p class="text-success mt-3 fw-semibold">@ViewBag.Message</p>
        </div>

        <div class="col-md-6 mb-4">
            <!-- List Card -->
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-info text-white fw-bold rounded-top-4">
                    <i class="bi bi-list-check"></i> Item List
                </div>
                <div class="card-body">
                    @Html.Partial("_ItemListPartial")
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
