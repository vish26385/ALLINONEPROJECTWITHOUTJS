@model ALLINONEPROJECTWITHOUTJS.Controllers.ItemMasterViewModel

<div class="mb-3">
    <input type="hidden" name="ItemMaster.Id" value="@Model.ItemMaster?.Id" />

    <div class="form-floating mb-3">
        <input type="text" class="form-control shadow-sm" id="itemName"
               name="ItemMaster.Name" value="@Model.ItemMaster?.Name"
               placeholder="Enter Item Name" required autofocus />
        <label for="itemName"><i class="bi bi-box-seam"></i> Item Name</label>
    </div>

    <div class="form-floating mb-3">
        <input type="number" step="0.01" class="form-control shadow-sm" id="itemPrice"
               name="ItemMaster.Price" value="@Model.ItemMaster?.Price"
               placeholder="Enter Item Price" />
        <label for="itemPrice"><i class="bi bi-currency-rupee"></i> Price</label>
    </div>

    <div class="d-flex justify-content-end gap-2">
        @if (Model.ItemMaster != null && Model.ItemMaster.Id > 0)
        {
            <button type="submit" formaction="/Item/UpdateItem"
                    class="btn btn-warning px-4">
                <i class="bi bi-pencil-square"></i> Update
            </button>
        }
        else
        {
            <button type="submit" formaction="/Item/SaveItem"
                    class="btn btn-success px-4">
                <i class="bi bi-check-circle"></i> Save
            </button>
        }
        <button type="reset" class="btn btn-secondary px-4">
            <i class="bi bi-arrow-clockwise"></i> Reset
        </button>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
